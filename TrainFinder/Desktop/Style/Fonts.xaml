<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Desktop"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <FontFamily x:Key="LetoRegular">pack://application:,,,,/Fonts/#Lato Regular</FontFamily>
    <FontFamily x:Key="LetoThin">pack://application:,,,,/Fonts/#Lato Thin</FontFamily>
    <FontFamily x:Key="FontAwesome">pack://application:,,,,/Fonts/#fontawesome webfont</FontFamily>

    <Style TargetType="{x:Type Control}" x:Key="BaseStyle">
        <Setter Property="FontFamily" Value="{StaticResource LetoThin}" />
    </Style>

    <Style TargetType="{x:Type RadioButton}" BasedOn="{StaticResource BaseStyle}" />
    <Style TargetType="{x:Type DataGrid}" BasedOn="{StaticResource BaseStyle}" />


    <Style TargetType="{x:Type TextBlock}" x:Key="BaseTextBlockStyle">
        <Setter Property="FontFamily" Value="{StaticResource LetoThin}" />
    </Style>

    <!--<Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource BaseTextBlockStyle}" />-->

    <system:Double x:Key="Large">30</system:Double>
    <system:Double x:Key="Medium">24</system:Double>
    <system:Double x:Key="TextSize">22</system:Double>
    <system:Double x:Key="Small">20</system:Double>


</ResourceDictionary>