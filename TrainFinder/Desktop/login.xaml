<Window x:Class="Desktop.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Control System" Height="1080" Width="1920"
        Icon="pic/untitled.png"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        FontSize="24" Background="#FFC58383">
    <Grid HorizontalAlignment="Left" Height="1016" Margin="10,10,0,0" VerticalAlignment="Top" Width="1900">

        <TextBox x:Name="txt_user" Text="{Binding Path=Uname}" HorizontalAlignment="Left" Height="23" Margin="905,294.8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Grid.Row="2" />
        <PasswordBox x:Name="txt_password"    HorizontalAlignment="Left" Height="23" Margin="905,342,0,0" VerticalAlignment="Top" Width="100" />

        <Label Content="User Name" HorizontalAlignment="Left" Margin="690,276,0,0" VerticalAlignment="Top" />
        <Label Content="Password" HorizontalAlignment="Left" Margin="690,342,0,0" VerticalAlignment="Top" />

        <Button x:Name="btn_login" Click="Btn_login_OnClick" Content="LOG IN" HorizontalAlignment="Left"
                VerticalAlignment="Top" Width="170" Margin="765,420,0,0" />

    </Grid>
</Window>