<Application x:Class="Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dxm="http://schemas.devexpress.com/winfx/2008/xaml/map"
             xmlns:local="clr-namespace:Desktop"
             StartupUri="View/loginWindow.xaml">


    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--order is important-->
                <ResourceDictionary Source="Style/Color.xaml"/>
                <ResourceDictionary Source="Style/Fonts.xaml"/>
                <ResourceDictionary Source="Style/Button.xaml"/>
                <ResourceDictionary Source="Style/Window.xaml"/>
                <ResourceDictionary Source="Style/Text.xaml"/>
                <ResourceDictionary Source="Style/ErrorTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>